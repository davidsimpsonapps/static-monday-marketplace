{
  "name": "static-monday-marketplace",
  "version": "1.0.0",
  "description": "A starter project for Eleventy with Tailwind CSS",
  "scripts": {
    "start": "NODE_OPTIONS=--max-old-space-size=8192 eleventy --serve",
    "build": "NODE_ENV=production NODE_OPTIONS=--max-old-space-size=8192 eleventy",
    "watch": "NODE_OPTIONS=--max-old-space-size=8192 eleventy --watch",
    "dev": "NODE_OPTIONS=--max-old-space-size=8192 eleventy --serve",
    "build:css": "tailwindcss -i ./src/css/styles.css -o ./_site/css/styles.css --minify",
    "build:all": "npm run build:css && npm run build",
    "deploy": "npm run build && wrangler pages deploy _site --project-name=static-monday-marketplace"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-img": "^6.0.4",
    "@cospired/i18n-iso-languages": "^4.2.0",
    "country-list": "^2.4.1",
    "html-minifier-terser": "^7.2.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  }
}
