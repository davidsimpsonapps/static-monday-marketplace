---
layout: base.njk
pagination:
  data: marketplace
  size: 1
  alias: app
  addAllPagesToCollections: true
permalink: /apps/{{ app.id }}/
---

{% set vendor = vendors | findVendorById(app.marketplace_developer_id) %}

<div class="max-w-4xl mx-auto">
  <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-8">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    Back to Apps
  </a>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-8">
      <div class="flex items-start mb-8">
        {% if app.logo_url %}
          <img src="{{ app.logo_url }}" alt="{{ app.name }} logo" class="w-24 h-24 rounded-lg mr-6">
        {% endif %}
        <div>
          <h1 class="text-3xl font-bold mb-2">{{ app.name }}</h1>
          <p class="text-sm text-gray-500 mb-4">By {{ vendor.name if vendor else "Unknown Vendor" }}</p>
          {% if app.pricing_data %}
            <span class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm mb-4">
              {{ app.pricing_data }}
            </span>
          {% endif %}
        </div>
      </div>

      <div class="prose max-w-none">
        {{ app.description | safe }}
      </div>

      {% if app.gallery_assets and app.gallery_assets.length > 0 %}
        <div class="mt-8">
          <h2 class="text-2xl font-semibold mb-4">Gallery</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {% for asset in app.gallery_assets %}
              {% if asset.type == 'image' %}
                <img src="{{ asset.url }}" alt="Gallery image" class="rounded-lg shadow-md">
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {% if app.feedback_url %}
        <div class="mt-8 pt-8 border-t">
          <h2 class="text-2xl font-semibold mb-4">Support</h2>
          <p>For support, please contact: <a href="mailto:{{ app.feedback_url }}" class="text-blue-600 hover:text-blue-800">{{ app.feedback_url }}</a></p>
        </div>
      {% endif %}

      {% if vendor and vendor.website %}
        <div class="mt-8 pt-8 border-t">
          <h2 class="text-2xl font-semibold mb-4">Developer</h2>
          <p>Visit the developer's website: <a href="{{ vendor.website }}" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800">{{ vendor.website }}</a></p>
        </div>
      {% endif %}
    </div>
  </div>
</div> 