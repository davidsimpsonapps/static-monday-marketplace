<div class="mx-auto">

  <div class="flex gap-3 mb-2 items-center justify-between">
    <div class="flex gap-3 items-center">
      <h1 class="text-lg md:text-2xl font-semibold mb-4">
        App categories
      </h1>
    </div>
  </div>

  <nav class="tabs pb-4">
    <a data-match="exact" href="/">Listings</a>
    <a data-match="include" href="/categories/">Categories</a>
    <a data-match="exact" href="/top-ranking/">Top ranking</a>
    <a data-match="exact" href="/installs/">Installs</a>
    <a data-match="include" href="/apps/archive/">Archive</a>
  </nav>

  

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-6">
    {% for category in categories %}
      <a 
        href="/categories/{{ category.id }}/" 
        class="category-card"
      >
        <div class="p-4 pb-2 flex-grow" style="background-color: {{ category.backgroundColor or '#ECEFF8' }}; color: {{ category.textColor or '#323338' }}">
          <div class="flex items-start">
            <div>
              <h2 class="text-lg font-semibold mt-0 mb-0">{{ category.name }}</h2>
              {% if category.content %}
                <p class="text-sm">{{ category.content }}</p>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="p-4 border-t border-gray-100">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">
              {% set appCount = marketplace | filterByCategory(category.id) | length %}
              {{ appCount }} app{% if appCount != 1 %}s{% endif %}
            </span>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</div> 