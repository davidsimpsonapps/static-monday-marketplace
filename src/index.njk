---
layout: base.njk
title: Home
---

{% from "partials/app-card.njk" import appCard %}

<div class="mx-auto">

  <div class="flex gap-3 mb-4">
    <h1 class="text-lg md:text-2xl font-semibold">
      Apps
    </h1>
    <span>
      <span data-total="{{ marketplace.length }}" class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs">
        {{ marketplace.length }}
      </span>
    </span>
  </div>
  
  {% include "partials/search.njk" %}

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
  
    {% set m365 = marketplace | findAppById('10000076') %}
    {{ appCard(m365, ratings, vendors, installs) }}

    {% set portal = marketplace | findAppById('10000574') %}
    {{ appCard(portal, ratings, vendors, installs) }}

    {% set easymails = marketplace | findAppById('10000414') %}
    {{ appCard(easymails, ratings, vendors, installs) }}


    {% for app in marketplace | removeAquisitionSource('monday') | sortByCreatedAt %}
      {{ appCard(app, ratings, vendors, installs) }}
    {% endfor %}
  </div>
</div>
