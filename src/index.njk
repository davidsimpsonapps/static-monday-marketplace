title: Home
---

{% from "partials/app-card.njk" import appCard %}

<div class="mx-auto">

  <div class="breadcrumb">
    <span>
      <a href="/">
        <svg viewBox="0 0 20 20" fill="currentColor" width="14" height="14" class="breadcrumbIcon_d94850cf8c"><path d="M9.56992 2.1408C9.82591 1.95307 10.1741 1.95307 10.4301 2.1408L17.7028 7.47413C17.8896 7.61113 18 7.82894 18 8.06061V16.7879C18 17.1895 17.6744 17.5152 17.2727 17.5152H11.9394C11.5377 17.5152 11.2121 17.1895 11.2121 16.7879V13.1515H8.78788V16.7879C8.78788 17.1895 8.46227 17.5152 8.06061 17.5152H2.72727C2.32561 17.5152 2 17.1895 2 16.7879V8.06061C2 7.82894 2.11037 7.61113 2.29719 7.47413L9.56992 2.1408ZM3.45455 8.42914V16.0606H7.33333V12.4242C7.33333 12.0226 7.65894 11.697 8.06061 11.697H11.9394C12.3411 11.697 12.6667 12.0226 12.6667 12.4242V16.0606H16.5455V8.42914L10 3.62914L3.45455 8.42914Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
        <span>Home</span>
      </a>
    </span>
  </div>

  <div class="flex gap-3 mb-2 items-center justify-between">
    <div class="flex gap-3 items-center">
      <h1 class="text-lg md:text-2xl font-semibold mb-4">
        Apps
      </h1>
      <span>
        <span data-total="{{ marketplace.length }}" class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs">
          {{ marketplace.length }}
        </span>
      </span>
    </div>
  </div>

  <nav class="tabs pb-4">
    <a data-match="exact" href="/">Listings</a>
    <a data-match="include" href="/categories/">Categories</a>
    <a data-match="exact" href="/top-ranking/">Top ranking</a>
    <a data-match="exact" href="/installs/">Installs</a>
  </nav>

  <p class="py-4">
    This website lists all <a target="_blank" href="https://monday.com/marketplace/">monday.com marketplace</a> 
    apps on one page. Search for specific apps below.
  </p>
  
  {% include "partials/search.njk" %}
  {% include "partials/sorting.njk" %}


  <div class="item-list cards">

    <div class="item card cards-hidden list-header">
      <div></div>
      <div>App</div>
      <div>Vendor</div>
      <div>
        <div class="list-cols">           
          <div class="ratings">
            Ratings
          </div>
          <div>Installs</div>
        </div>
      </div>
    </div>
    

    {% set specialApps = ['10000999', '10000574', '10000076'] | shuffle %}
    {% for id in specialApps %}
      {% set app = marketplace | findAppById(id) %}
      {{ appCard(app, ratings, vendors, installs) }}
    {% endfor %}
  
    {% for app in marketplace | removeAquisitionSource('monday') | removeAppsByIds(specialApps) | sortByCreatedAt %}
      {{ appCard(app, ratings, vendors, installs) }}
    {% endfor %}
  </div>
</div>
