<script>
  function getWeekNumberUTC(date) {
    const d = new Date(Date.UTC(
      date.getUTCFullYear(),
      date.getUTCMonth(),
      date.getUTCDate()
    ));
    const dayNum = d.getUTCDay() || 7;
    d.setUTCDate(d.getUTCDate() + 4 - dayNum);
    const yearStart = new Date(Date.UTC(d.getUTCFullYear(), 0, 1));
    return Math.ceil((((d - yearStart) / 86400000) + 1) / 7);
  }

  function updateUtcTime() {
    const now = new Date();

    // UTC time HH:mm:ss
    document.getElementById("time").textContent =
      now.toISOString().slice(11, 19);

    const week = getWeekNumberUTC(now);

    // Use browser locale, but force UTC
    const dateFormatter = new Intl.DateTimeFormat(undefined, {
      weekday: "long",
      day: "numeric",
      month: "long",
      year: "numeric",
      timeZone: "UTC"
    });

    document.getElementById("localised-date").textContent =
      `${dateFormatter.format(now)}, week ${week}.`;
  }

  updateUtcTime();
  setInterval(updateUtcTime, 1000);


  // Copy to clipboard stuff below here:
  const copyElement = document.getElementById('copy');
  const timeElement = document.getElementById('time');

  // Add clickable styling
  timeElement.style.cursor = 'pointer';
  timeElement.classList.add('hover:opacity-80', 'transition-opacity');

  // Create toast element
  const toast = document.createElement('div');
  toast.style.position = 'fixed';
  toast.style.bottom = '20px';
  toast.style.left = '50%';
  toast.style.transform = 'translateX(-50%)';
  toast.style.backgroundColor = '#10B981'; // green-500
  toast.style.color = 'white';
  toast.style.fontSize = '12px';
  toast.style.padding = '8px 16px';
  toast.style.borderRadius = '4px';
  toast.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1)';
  toast.style.zIndex = '9999';
  toast.style.display = 'none';
  toast.textContent = 'Time copied to clipboard!';
  document.body.appendChild(toast);

  copyElement.addEventListener('click', async () => {
    try {
      const textToCopy = timeElement.textContent;
      
      // Modern clipboard API
      if (navigator.clipboard && window.isSecureContext) {
        await navigator.clipboard.writeText(textToCopy);
      } else {
        // Fallback for non-HTTPS contexts
        fallbackCopy(textToCopy);
      }
      
      // Show toast
      toast.style.display = 'block';
      setTimeout(() => {
        toast.style.display = 'none';
      }, 2000);
      
    } catch (err) {
      console.error('Failed to copy:', err);
      alert('Failed to copy to clipboard');
    }
  });

  function fallbackCopy(text) {
    const textArea = document.createElement('textarea');
    textArea.value = text;
    textArea.style.position = 'fixed';
    textArea.style.left = '-999999px';
    textArea.style.top = '-999999px';
    document.body.appendChild(textArea);
    textArea.focus();
    textArea.select();
    
    try {
      document.execCommand('copy');
    } catch (err) {
      console.error('Fallback failed:', err);
    }
    
    document.body.removeChild(textArea);
  }
</script>

